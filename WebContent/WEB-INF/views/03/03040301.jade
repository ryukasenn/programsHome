
// 终端管理:添加终端人员(地总)
extends ./layouts/0304
    
block buttons
    .form-group
        button(type="button").btn.btn-default#addTerminal 添加下级人员
        |&nbsp&nbsp

block contents
    .row.placeholders
        .col-xs-12.col-sm-12.placeholder
            form.form-horizontal#addPersonForm
                input(type="hidden", name="NBPT_SP_PERSON_AREANO")
                input(type="hidden", value='#{person.NBPT_SP_PERSON_PID}')#NBPT_SP_PERSON_PID
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp姓名
                    .col-xs-4.col-sm-2
                        input.form-control(placeholder="例:张三", name="NBPT_SP_PERSON_NAME", value='#{person.NBPT_SP_PERSON_NAME}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp性别
                    .col-xs-4.col-sm-4
                        label.radio-inline
                            input(type="radio",name="NBPT_SP_PERSON_MALE",value="1") 
                            |男
                        label.radio-inline
                            input(type="radio",name="NBPT_SP_PERSON_MALE",value="0") 
                            |女
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp职务
                    .col-xs-4.col-sm-4
                        label.radio-inline
                            input(type="radio",name="NBPT_SP_PERSON_JOB",value="23") 
                            |区县总
                        label.radio-inline
                            input(type="radio",name="NBPT_SP_PERSON_JOB",value="24") 
                            |预备区县总
                        label.radio-inline
                            input(type="radio",name="NBPT_SP_PERSON_JOB",value="25") 
                            |推广经理
                .form-group.reponseAreas
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp负责区县
                    .col-xs-2.col-sm-2
                        select.form-control
                            each item in controllAreas
                                option(value="#{item.NBPT_COMMON_XZQXHF_ID}")= item.NBPT_COMMON_XZQXHF_NAME
                    .col-xs-1.col-sm-1
                        button.btn.btn-default(type="button").extraBtn
                            span.glyphicon.glyphicon-plus(aria-hidden="true")
                .form-group
                    label.col-xs-1.col-sm-1.control-label
                        font(color="red") *
                        |&nbsp&nbsp身份证号码
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_IDNUM", value='#{person.NBPT_SP_PERSON_IDNUM}')
                    .col-xs-2.col-sm-2.errorMessage
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp个人手机
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_MOB1",placeholder="例:18518596989", value='#{person.NBPT_SP_PERSON_MOB1}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp紧急联络人
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_MOB2",placeholder="例:18518596989", value='#{person.NBPT_SP_PERSON_MOB2}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp入职时间
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_ENTRYDATA",placeholder="例:19981010", value='#{person.NBPT_SP_PERSON_ENTRYDATA}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp籍贯
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_PLACE",placeholder="例:张三", value='#{person.NBPT_SP_PERSON_PLACE}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp保单编号
                    .col-xs-2.col-sm-2
                        select.form-control(name="NBPT_SP_PERSON_POLICYTYPE")#policytypeSelect
                            each item in policytypeSelects
                                option(value="#{item.NBPT_COMMON_DICTIONARY_KEY_VALUE}") #{item.NBPT_COMMON_DICTIONARY_KEY_NAME}
                    .col-xs-2.col-sm-2
                        input.form-control(name="NBPT_SP_PERSON_POLICYNO",placeholder="例:NAN17AA06126A2", value='#{person.NBPT_SP_PERSON_POLICYNO}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp保单起始
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_POLICY_DATA1",placeholder="例:19981010", value='#{person.NBPT_SP_PERSON_POLICY_DATA1}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 
                        font(color="red") *
                        |&nbsp&nbsp&nbsp&nbsp保单结束
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_POLICY_DATA2",placeholder="例:20001010", value='#{person.NBPT_SP_PERSON_POLICY_DATA2}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label QQ
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_QQ", value='#{person.NBPT_SP_PERSON_QQ}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 微信
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_CHAT", value='#{person.NBPT_SP_PERSON_CHAT}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 邮箱
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_MAIL", value='#{person.NBPT_SP_PERSON_MAIL}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 学历
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_DEGREE", value='#{person.NBPT_SP_PERSON_DEGREE}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 毕业学校
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_SCHOOL", value='#{person.NBPT_SP_PERSON_SCHOOL}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 专业
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_PROFESS", value='#{person.NBPT_SP_PERSON_PROFESS}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 备注
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_NOTE", value='#{person.NBPT_SP_PERSON_NOTE}')
                .form-group
                    label.col-xs-1.col-sm-1.control-label 职称
                    .col-xs-4.col-sm-4
                        input.form-control(name="NBPT_SP_PERSON_TITLE", value='#{person.NBPT_SP_PERSON_TITLE}')
                .form-group
                    .col-xs-offset-1.col-sm-offset-1.col-xs-4.col-sm-4
                        button(type="button")#addPerson.btn.btn-primary 提交
    
block scripts
    script(language="javascript", src="#{myPath}/javascripts/common.js")
    script(language="javascript", src="#{myPath}/javascripts/03/0304.js")
    script(language="javascript", src="#{myPath}/javascripts/03/03040301.js")
    script
        var male = '#{person.NBPT_SP_PERSON_MALE}';
        var job = '#{person.NBPT_SP_PERSON_JOB}';
        $("input:radio[name='NBPT_SP_PERSON_MALE'][value='" + male + "']").attr("checked",true);
        $("input:radio[name='NBPT_SP_PERSON_JOB'][value='" + job + "']").attr("checked",true);
        $("select[name='NBPT_SP_PERSON_POLICYTYPE']").val('#{person.NBPT_SP_PERSON_POLICYTYPE}');
    
block pageId
    p(style="display:none") 03040301
    