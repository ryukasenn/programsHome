extends ../templates/layout

block link
  link(rel='stylesheet', href='#{publicPath}/css/in/test.css')
  link(rel='stylesheet', href='#{publicPath}/css/out/weui.min.css')

block header
  .container
    .row
      img(src='#{publicPath}/images/2.png').col-xs-12.img-thumbnail
block body
  .container
    .row
      .col-xs-12
        .form-wrap
          form(role='form', action='#{publicPath}/api/new', method='POST')
            .weui_cells.weui_cells_form
              .weui_cell
                .col-xs-4
                  .weui_label 姓名
                .col-xs-8
                  input(type="text" ,placeholder='请填入客户姓名').weui_input
              .weui_cell
                .col-xs-4
                  .weui_label 客户电话
                .col-xs-8
                  input(type="text" ,placeholder='请填入客户姓名').weui_input
              .weui_cell
                .col-xs-4
                  .weui_label 客户地址
                .col-xs-8
                  textarea(rows= '3').weui_textarea