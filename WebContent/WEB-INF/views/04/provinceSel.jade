extends ../layout


block header
    link(rel='stylesheet', href='#{myPath}/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='#{myPath}/stylesheets/bootstrap-datetimepicker.min.css')
block fnzdy
    li
        a(href="#{myPath}/funsel") 返回
block content
    .row
        form(role="form", action="#{myPath}/zdhx/province", method="POST")
            div(style="height:40px;")
            h1= title
            .form-group
                .input-group
                    .input-group-addon
                        span 选择省份
                    input(name="province", placeholder="请选择要核销省份", autocomplete="off", data-provide="typeahead",  style="width:50%;",  value= data.province)#province.form-control
            .form-group
                .input-group
                    .input-group-addon
                        span 截至时间
                    input(name="timeEnd", readonly, placeholder="请选择截至时间,将考核该时间以前的所有回款单", style="width:50%;", value= data.timeEnd)#timeEnd.form-control
                    button(type="submit", style="margin-left: 10px;")#confirmIn.btn.btn-primary 确定
    .row
        .panel.panel-default
            .panel-heading 核销记录
            table.table
                tr
                    th 订单编号
                    th 回款单编号
                    th 物料编号
                    th 业务员
                    th 单位编号
                    th 单位名称
                    th 核销日期
                    th 实际核销金额
                    th 核销人
                each XSDDHX in XSDDHXS
                    tr
                        each item in XSDDHX
                            td= item
    .modal#mymodal
        .modal-dialog
            .modal-content
                .modal-header
                    h4 提示内容
                .modal-body
                    p 正在进行自动核销，请稍后
                .modal-footer
    script(src="#{myPath}/javascripts/jquery.min.js#{randomJsVersion}")
    script(src="#{myPath}/javascripts/bootstrap.min.js#{randomJsVersion}")
    script(src="#{myPath}/javascripts/typeahead.min.js#{randomJsVersion}")
    script(src="#{myPath}/javascripts/bootstrap-datetimepicker.min.js#{randomJsVersion}")
    script(src="#{myPath}/javascripts/provinceSel.js#{randomJsVersion}")
		